{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@components/*": ["./components/*"],
			"@styles/*": ["./styles/*"],
			"@hooks/*": ["./hooks/*"],
			"@models/*": ["./models/*"],
			"@/*": ["./*"]
		}
	},
	"include": ["./**/*.ts", "./**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
